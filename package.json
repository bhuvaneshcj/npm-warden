{
    "name": "npm-warden",
    "version": "1.0.2",
    "description": "CLI tool to audit npm dependencies for maintenance and security risks",
    "type": "module",
    "main": "dist/src/cli.js",
    "bin": {
        "npm-warden": "./dist/src/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "build:with-tests": "tsc && tsc --project tsconfig.test.json",
        "start": "node dist/src/cli.js",
        "test": "npm run build:with-tests && node --test 'dist/tests/**/*.test.js'",
        "test:watch": "npm run build:with-tests && node --test --watch 'dist/tests/**/*.test.js'",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "npm",
        "dependencies",
        "audit",
        "security",
        "maintenance",
        "cli"
    ],
    "author": "Bhuvanesh C",
    "license": "MIT",
    "files": [
        "dist/src",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bhuvaneshcj/npm-warden.git"
    },
    "bugs": {
        "url": "https://github.com/bhuvaneshcj/npm-warden/issues"
    },
    "homepage": "https://github.com/bhuvaneshcj/npm-warden#readme",
    "dependencies": {
        "commander": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "prettier": "^3.7.3",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "exports": {
        ".": {
            "import": "./dist/src/cli.js",
            "types": "./dist/src/cli.d.ts"
        }
    }
}
